<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :frequency %><br>
    <%= select(:task, :frequency, [['Hourly', 'Hourly'], ['Daily', 'Daily'], ['Weekly', 'Weekly'], ['Montly', 'Montly']]) %>
  </div>
  <div class="field">
    <%= f.label :month %><br>
    <%= f.number_field :month %>
  </div>
  <div class="field">
    <%= f.label :day_of_week %><br>
    <%= f.number_field :day_of_week %>
  </div>
  <div class="field">
    <%= f.label :day_of_month %><br>
    <%= f.number_field :day_of_month %>
  </div>
  <div class="field">
    <%= f.label :hour %><br>
    <%= f.number_field :hour %>
  </div>
  <div class="field">
    <%= f.label :command %><br>
    <%= f.text_field :command, :size=>100 %>
  </div>
  <div class="field">
    <%= f.label :folder%><br>
    <%= f.text_field :folder, :size=>100 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
